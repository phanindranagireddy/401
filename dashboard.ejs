<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            display: flex;
            height: 100vh;
            background-color: #b4e2ef;
        }

        .sidebar {
            width: 250px;
            background-color: #5694d2;
            color: rgb(11, 11, 6);
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .sidebar h2 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 22px;
            border-bottom: 1px solid #555;
            padding-bottom: 10px;
        }

        .sidebar a {
            color: rgb(12, 8, 8);
            text-decoration: none;
            font-size: 18px;
            margin: 10px 0;
            display: block;
            padding: 10px;
            border-radius: 4px;
            transition: background 0.3s;
        }

        .sidebar a:hover {
            background-color: #575757;
        }

        .main-content {
            flex-grow: 1;
            padding: 20px;
            overflow-y: auto;
        }

        .main-content h1 {
            font-size: 28px;
            margin-bottom: 20px;
        }

        .main-content p {
            font-size: 16px;
        }

        .country-section {
            margin-top: 20px;
        }

        .country-section input {
            width: 100%;
            padding: 10px;
            font-size: 18px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .country-section button {
            padding: 10px 20px;
            font-size: 18px;
            background-color: #333;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .country-section button:hover {
            background-color: #555;
        }

        .country-box {
            margin-top: 20px;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 4px;
            background-color: #fff;
        }

        .country-box img {
            width: 100px;
            height: auto;
            display: block;
            margin: 10px 0;
        }

        .footer {
            text-align: center;
            padding: 10px;
            background-color: #2c598c;
            color: white;
            margin-top: auto;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div>
            <h2>Dashboard</h2>
            <a href="#">Home</a>
            <a href="#">Profile</a>
            <a href="#">Settings</a>
            <a href="/login">Logout</a>
        </div>
        <div class="footer">
           Customer Service
        </div>
    </div>
    <div class="main-content">
        <h1>Welcome to the Dashboard</h1>
        <p>This is a blank dashboard template. Customize it to suit your needs.</p>
        <div class="country-section">
            <h2>Country Information</h2>
            <input type="text" id="countryInput" placeholder="Enter a country name...">
            <button onclick="getCountryInfo()">Get Information</button>
            <div class="country-box" id="countryBox">
                <!-- Country details will be displayed here -->
            </div>
        </div>
    </div>
    <script>
        function getCountryInfo() {
            const country = document.getElementById('countryInput').value;
            fetch(`/api/country?country=${country}`)
                .then(response => response.json())
                .then(data => {
                    if (data.error) {
                        document.getElementById('countryBox').innerText = data.error;
                    } else {
                        const countryInfo = `
                            <h3>${data.name}</h3>
                            <p><strong>Population:</strong> ${data.population}</p>
                            <p><strong>Area:</strong> ${data.area} kmÂ²</p>
                            <p><strong>Capital:</strong> ${data.capital}</p>
                            <p><strong>Region:</strong> ${data.region}</p>
                            <img src="${data.flag}" alt="Flag of ${data.name}">
                        `;
                        document.getElementById('countryBox').innerHTML = countryInfo;
                    }
                })
                .catch(error => {
                    console.error('Error fetching country data:', error);
                    document.getElementById('countryBox').innerText = 'Error fetching country data.';
                });
        }
    </script>
</body>
</html>
